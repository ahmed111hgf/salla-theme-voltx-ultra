
<section class="vx-hero-slider">
  <div class="vx-slide" style="--bg:url('{{ settings.hero1_image.value }}')">
    <div class="vx-overlay"></div>
    <div class="vx-hero-inner container">
      <h1>{{ settings.hero1_title.value }}</h1>
      <p>{{ settings.hero1_subtitle.value }}</p>
      <a href="{{ settings.hero1_cta_link.value }}" class="vx-btn">{{ settings.hero1_cta_text.value }}</a>
    </div>
  </div>
  <div class="vx-slide" style="--bg:url('{{ settings.hero2_image.value }}')">
    <div class="vx-overlay"></div>
    <div class="vx-hero-inner container">
      <h2>{{ settings.hero2_title.value }}</h2>
      <p>{{ settings.hero2_subtitle.value }}</p>
      <a href="{{ settings.hero2_cta_link.value }}" class="vx-btn outline">{{ settings.hero2_cta_text.value }}</a>
    </div>
  </div>
</section>
