
<section class="vx-badges container">
  <div class="vx-badges-grid">
    {% for item in component.fields.items %}
      <div class="vx-badge">
        <i class="{{ item.icon }}"></i>
        <div>
          <h4>{{ item.title }}</h4>
          <p>{{ item.subtitle }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
